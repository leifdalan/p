  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "address": "localhost",
      "port": 9204,
      "localRoot": "${workspaceRoot}/",
      "remoteRoot": "/tmc-tune-links/",
      "protocol": "inspector",
      "timeout": 10000,
      "restart": true,
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "${workspaceRoot}/lib/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Jest",
      "localRoot": "${workspaceRoot}/",
      "port": 5757,
      "restart": true
    }    
  ]
}